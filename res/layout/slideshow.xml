<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black" android:weightSum="1">
    
        
         <Button android:id="@+id/close"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="Exit" android:background="@android:color/transparent"
    android:textSize="35dp" android:layout_marginTop="5dp" android:textColor="#ffffff" 
    android:onClick="onClick" android:layout_weight="0.03"/>
    
         <ImageView
                android:id="@+id/ImageView3_Left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                ></ImageView>
                
               

</LinearLayout>
